{
  "name": "@atomist/atomist-internal-sdm",
  "version": "0.2.0",
  "description": "an Atomist SDM to deliver Clojure projects",
  "author": "Atomist, Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomist/clojure-sdm.git"
  },
  "keywords": [
    "atomist",
    "automation",
    "sdm",
    "clojure",
    "lein"
  ],
  "homepage": "https://github.com/atomist/clojure-sdm#readme",
  "bugs": {
    "url": "https://github.com/atomist/clojure-sdm/issues"
  },
  "dependencies": {
    "@atomist/automation-client": "^1.0.0-M.3",
    "@atomist/automation-client-ext-logzio": "0.1.0-20180628224529",
    "@atomist/automation-client-ext-raven": "0.1.0-20180613131132",
    "@atomist/clj-editors": "^0.4.5",
    "@atomist/sdm": "^1.0.0-master.20180909210749",
    "@atomist/sdm-core": "^1.0.0-master.20180909211148",
    "@atomist/sdm-pack-clojure": "^0.3.0-master.20180911215935",
    "@atomist/sdm-pack-docker": "^1.0.0-docker-pack.20180903214340",
    "@atomist/sdm-pack-fingerprints": "^0.3.0-master.20180913202611",
    "@atomist/sdm-pack-rcca": "^0.0.1",
    "@atomist/slack-messages": "^1.0.0",
    "dateformat": "^3.0.3",
    "fs-extra": "^6.0.0",
    "lodash": "^4.17.10",
    "node-dir": "^0.1.17",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.28",
    "@types/node-dir": "0.0.32",
    "@types/power-assert": "^1.4.29",
    "@types/uuid": "^3.4.3",
    "apollo-codegen": "^0.19.1",
    "espower-typescript": "^8.1.3",
    "graphql-code-generator": "^0.8.19",
    "mocha": "^4.1.0",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.4",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supervisor": "^0.12.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.11.1",
    "typescript": "2.8.3",
    "typescript-formatter": "^7.2.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autostart": "npm-run-all --print-label --parallel watch:compile watch",
    "autotest": "supervisor --watch src,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "npm-run-all compile test lint typedoc",
    "clean": "npm-run-all clean:js clean:build",
    "clean:build": "rimraf *-v8.log profile.txt build",
    "clean:dist": "npm-run-all clean clean:npm",
    "clean:js": "rimraf \"{lib,test}/**/*.js\"",
    "clean:npm": "rimraf node_modules",
    "compile": "npm-run-all git:info compile:gql compile:ts",
    "compile:gql": "npm-run-all gql:gen gql:copy",
    "compile:ts": "tsc --project .",
    "debug": "node --inspect node_modules/@atomist/automation-client/start.client.js",
    "fmt": "npm-run-all fmt:gql",
    "fmt:gql": "prettier --write \"**/*.graphql\"",
    "git:info": "atm-git-info",
    "gql:copy": "copyfiles \"./lib/**/*.graphql\" build",
    "gql:gen": "atm-gql-gen",
    "js:copy": "copyfiles \"./lib/**/*.js\" build",
    "lint": "npm-run-all lint:ts",
    "lint:ts": "tslint --format verbose --project . --exclude \"{build,node_modules}/**\" \"**/*.ts\"",
    "lint:gql": "prettier --list-different \"lib/graphql/**/*.graphql\"",
    "lint:fix": "npm-run-all lint:ts:fix",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "start": "atm-start",
    "test": "mocha --exit --require espower-typescript/guess \"test/**/*est.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.ts}\"",
    "typedoc": "typedoc --mode modules --excludeExternals --out build/typedoc lib",
    "watch:compile": "tsc --project . --watch",
    "watch": "supervisor --watch build --quiet --exec npm -- run start"
  },
  "engines": {
    "node": "9.x.x",
    "npm": "5.x.x"
  }
}
